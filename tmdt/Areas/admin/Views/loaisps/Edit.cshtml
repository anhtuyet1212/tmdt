@model tmdt.Models.loaisp

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa thông tin sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>loaisp</h4>*@
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        @Html.HiddenFor(model => model.ma)

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại sản phẩm</label>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="text" value="@Model.ten" name="ten" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.mota, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>