@model IEnumerable<tmdt.Models.nguoidung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<h2>Trang Người Dùng</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Tên
        </th>
        <th>
           Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
           Điện thoại
        </th>
        <th>
          Email
        </th>
        <th>
           Tên đăng nhập
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
          Ảnh
        </th>
        <th>
          Quyền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gioitinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dienthoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tendangnhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.matkhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.anh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quyen)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ma }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ma }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ma })
        </td>
    </tr>
}

</table>
