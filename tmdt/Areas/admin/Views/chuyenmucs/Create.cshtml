@model tmdt.Models.chuyenmuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<h2>Thêm chuyên mục mới</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>chuyenmuc</h4>*@
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Tên chuyên mục</label>
            <div class="col-md-10">
                <input type="text" name="mact" class="form-control" required placeholder="Mã chuyên mục" />
                @* @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên danh mục</label>
            <div class="col-md-10">
                <input type="text" name="ten" class="form-control" required placeholder="Nhập tên chuyên mục" />
                @*@Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })*@
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                <textarea name="mota" class="form-control"></textarea>
                @*@Html.EditorFor(model => model.mota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu danh mục" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
