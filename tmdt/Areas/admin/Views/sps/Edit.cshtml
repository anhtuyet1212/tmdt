@model tmdt.Models.sp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>CHỈNH SỬA SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>sp</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ma)

        <div class="form-group">
            <label class="control-label col-md-2">Tên sản phẩm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mota, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            @*Chèn lệnh để viết mô tả*@
            <script type="text/javascript">
            CKEDITOR.replace("mota");
            </script>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã loại</label>
            <div class="col-md-10">
                @Html.DropDownList("maloai", null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh đại diện</label>
            <div class="col-md-5">
                <div class="col-md-4">
                    <input type="text" name="anhnho" id="anhnho" value="@Model.anhnho" class="col-md-4" />
                </div>
                <div class="col-md-2">
                    <input type="button" id="moanh" class="btn btn-default" value="Mở" />
                </div>
                <div class="col-md-3">
                    <img src="#" id="anhdaidien" width="50" height="50" />
                </div>
            </div>
        </div>
        <script type="text/javascript">
        $("#moanh").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                // fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                $("#anhnho").val(fileUrl);
                $('#anhdaidien').attr("src", fileUrl);
            }
            finder.popup();
        });
        </script>


        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 1</label>
            <div class="col-md-5">
                <div class="col-md-4">
                    <input type="text" name="anh1" id="anh1" value="@Model.anh1" class="col-md-4" />
                </div>
                <div class="col-md-2">
                    <input type="button" id="moanh1" class="btn btn-default" value="Mở" />
                </div>
                <div class="col-md-3">
                    <img src="#" id="anhphu1" width="50" height="50" />
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $("#moanh1").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    // fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                    $("#anh1").val(fileUrl);
                    $('#anhphu1').attr("src", fileUrl);
                }
                finder.popup();
            });
        </script>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 2</label>
            <div class="col-md-5">
                <div class="col-md-4">
                    @*Thêm vaulua để lấy ảnh từ trg cũ*@
                    <input type="text" name="anh2" id="anh2" value="@Model.anh2" class="col-md-4" />
                </div>
                <div class="col-md-2">
                    <input type="button" id="moanh2" class="btn btn-default" value="Mở" />
                </div>
                <div class="col-md-3">
                    <img src="#" id="anhphu2" width="50" height="50" />
                </div>
            </div>
            <script type="text/javascript">
                    $("#moanh2").click(function () {
                        var finder = new CKFinder();
                        finder.selectActionFunction = function (fileUrl) {
                            // fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                            $("#anh2").val(fileUrl);
                            $('#anhphu2').attr("src", fileUrl);
                        }
                        finder.popup();
                    });
            </script>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh 3</label>
            <div class="col-md-5">
                <div class="col-md-4">
                    <input type="text" name="anh3" id="anh3" value="@Model.anh3" class="col-md-4" />
                </div>
                <div class="col-md-2">
                    <input type="button" id="moanh3" class="btn btn-default" value="Mở" />
                </div>
                <div class="col-md-3">
                    <img src="#" id="anhphu3" width="50" height="50" />
                </div>
            </div>
            <script type="text/javascript">
                        $("#moanh3").click(function () {
                            var finder = new CKFinder();
                            finder.selectActionFunction = function (fileUrl) {
                                // fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                                $("#anh3").val(fileUrl);
                                $('#anhphu3').attr("src", fileUrl);
                            }
                            finder.popup();
                        });
            </script>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Thông số kỹ thuật</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tskt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tskt, "", new { @class = "text-danger" })
            </div>
            @*Chèn lệnh để viết mô tả*@
            <script type="text/javascript">
                            CKEDITOR.replace("tskt");
            </script>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tiêu biểu</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.tieubieu)
                    @Html.ValidationMessageFor(model => model.tieubieu, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Trạng thái</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.trangthai)
                    @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Xoá</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.xoa)
                    @Html.ValidationMessageFor(model => model.xoa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Hãng</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.hang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.gia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Khuyến mại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.khuyenmai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.khuyenmai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đăng</label>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.ngaydang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ngaydang, "", new { @class = "text-danger" })*@
                @*Hiển thị ngày đăng theo dạng lịch*@
                <input type="date" name="ngaydang" value="@Model.ngaydang" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Đơn vị tính</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dvt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dvt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
