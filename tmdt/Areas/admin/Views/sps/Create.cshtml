<h2>Thêm mới sản phẩm</h2>
<form action="@Url.Action("Create","sps")" method="post">
      <div class="form-horizontal">
        <hr />
        
        <div class="form-group">
            <label class="control-label col-md-2">Tên</label>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="text" name="ten" class="form-control" required placeholder="Nhập tên sản phẩm" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger" })
            </div>
        </div>
        <script type="text/javascript">
            CKEDITOR.replace("mota");
        </script>

        <div class="form-group">
            @Html.LabelFor(model => model.maloai, "maloai", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name ="maloai" class="form-control">
                    
                    @foreach (var item in ViewBag.maloai)
                    {
                       <option value="@item.ma">@item.ten</option>
                    }
                </select>
                @*@Html.DropDownList("maloai", null, htmlAttributes: new { @class = "form-control" })*@
                @*@Html.ValidationMessageFor(model => model.maloai, "", new { @class = "text-danger" })*@
