        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh đại diện</label>
            <div class="col-md-10">
                <div class="col-md-4">
                    <input type="text" name="anhnho" id="anhnho" class="col-md-4" />
                </div>
                <div class="col-md-2">
                    <input type="button" id="moanh" class="btn btn-default" value="Mở" />
                </div>
                <div class="col-md-3">
                    <img src="#" id="anhdaidien" width="50" height="50" />
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $("#moanh").click(function () {
                var finder = new CKFinder();
                finder.selectActionFunction = function (fileUrl) {
                    // fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                    $("#anhnho").val(fileUrl);
                    $("#anhdaidien").attr("src", fileUrl);
                }
                finder.popup();
            });

        </script>
