@model IEnumerable<tmdt.Models.loaisp>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create","loaisps")"class="btn btn-primary">Thêm loại sản phẩm</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
            @item.ma
        </td>
        <td>
           
            @item.mota
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ma }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ma }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ma })
        </td>
    </tr>
}

</table>
