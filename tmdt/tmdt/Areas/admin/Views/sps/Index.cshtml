@model IEnumerable<tmdt.Models.sp>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<p>
    <a href="@Url.Action("Create","sps")" class="btn btn-primary">Thêm mới sản phẩm</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Ảnh nhỏ
        </th>
        <th>
            Ảnh 1
        </th>
        <th>
            Ảnh 2
        </th>
        <th>
            Ảnh 3
        </th>
        <th>
            Thông số kỹ thuật
        </th>
        <th>
            Tiêu biểu
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            @Html.DisplayNameFor(model => model.xoa)
        </th>
        <th>
            Hãng sản xuất
        </th>
        <th>
            Giá sản phẩm
        </th>
        <th>
            Khuyến mãi
        </th>
        <th>
            Ngày đăng
        </th>
        <th>
            Đơn vị tính
        </th>
        <th>
            Tên loại sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ten
            </td>
            <td>
                @item.mota
            </td>
            <td>
                <img src="@item.anhnho" width="100" height="100"/>
            </td>
            <td>
                @item.anh1
            </td>
            <td>
                @item.anh2
            </td>
            <td>
                @item.anh3
            </td>
            <td>
                @item.tskt
            </td>
            <td>
                @if(item.tieubieu==true)
                {
                    <span>Tiêu biểu</span>
                }
                else
                {
                    <span>Không</span>
                }
            </td>
            <td>
                @item.trangthai
            </td>
            <td>
                @item.xoa
            </td>
            <td>
                @item.hang
            </td>
            <td>
                @Convert.ToDecimal(item.gia).ToString("##,#")
            </td>
            <td>
                @item.khuyenmai
            </td>
            <td>
                @item.ngaydang
            </td>
            <td>
                @item.dvt
            </td>
            <td>
                @item.loaisp.ten
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ma }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ma }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ma })
            </td>
        </tr>
    }

</table>