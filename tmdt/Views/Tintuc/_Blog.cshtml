@using tmdt.Models;
@{ 
    var dstin = (List<tintuc>)ViewBag.dstin;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title from-blog__title">
                <h2>TIN TỨC MỚI</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in dstin)
        {
            if (item.tieubieu == true)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 @item.tieude">
                    <div class="blog__item">
                        <div class="blog__item__pic icon">
                            <img src="@item.anh" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.ngaydang</li>
                                <li><i class="fa fa-comment-o"></i> 5</li>
                            </ul>
                            <h5><a href="@Url.Action("_Chitiettintuc", "Tintuc",new { ma=item.ma})">@item.matangan</a></h5>
                            <p>@Html.Raw(item.mota) </p>
                        </div>
                    </div>
                </div>

            }
        }      
    </div>
</div>
