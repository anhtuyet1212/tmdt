

@model PagedList.IPagedList<tmdt.Models.tintuc>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title from-blog__title">
                <h2>TIN TỨC MỚI</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-lg-4 col-md-4 col-sm-6 @item.tieude">
                <div class="blog__item">
                    <div class="blog__item__pic icon">
                        <img src="@item.anh" alt="" width="100%" height="300px">
                    </div>
                    <div class="blog__item__text">
                        <ul>
                            <li><i class="fa fa-calendar-o"></i> @item.ngaydang</li>
                            <li><i class="fa fa-comment-o"></i> 5</li>
                        </ul>
                        <h5><a class="three-line" href="@Url.Action("_Chitiettintuc", "Tintuc",new { ma=item.ma})">@item.tieude</a></h5>
                        <p class="three-line">@item.matangan</p>
                    </div>
                </div>
            </div>


        }
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "Get", UpdateTargetId = "sp_area" }))
</div>
<style>
    .three-line {
        width: auto;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 25px;
        -webkit-line-clamp: 3;
        height: auto;
        display: -webkit-box;
        -webkit-box-orient: vertical;
    }
</style>

